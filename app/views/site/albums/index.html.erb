<div class="container">
  <h3 class="text-center">Альбомы</h3>

  <% @albums.each do |album| %>
    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-6 text-center">     
      
      
      <%= link_to album.name, album_path(album) %>
      <%= link_to image_tag(album.cover, class: "img-rounded img-responsive"), album %>
      
    </div> 
  <% end %>

</div>